{
	"name": "nectar-ui",
	"version": "0.0.1",
	"description": "The nectar-ui design system.",
	"author": "Brennan Walsh <mail@brennanwal.sh> (https://brennanwal.sh)",
	"repository": "nectar-ui/nectar",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"clean": "git clean -Xdf",
		"format": "prettier --write . --ignore-path .gitignore",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"test": "jest --config ./configs/jest-config/jest.config.json",
		"lint": "eslint . --ignore-path .gitignore --cache --cache-location var/eslint/cache",
		"build": "pnpm run --recursive --if-present build",
		"changeset": "changeset add",
		"version": "changeset version",
		"publish": "changeset publish",
		"storybook": "cd apps/storybook && pnpm run build",
		"storybook:dev": "cd apps/storybook && pnpm run dev"
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@nectar-ui/eslint-config": "workspace:*",
		"@nectar-ui/prettier-config": "workspace:*",
		"@storybook/react": "7.0.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"esbuild": "^0.14.54",
		"esbuild-css-modules-plugin": "^2.7.1",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-testing-library": "^5.10.3",
		"jest": "^29.5.0",
		"postcss": "^8.4.22",
		"prettier": "^2.8.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-jest": "^29.1.0",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4",
		"typescript-plugin-css-modules": "^5.0.1"
	},
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.11",
		"@types/react": "^18.0.35",
		"@types/react-dom": "^18.0.11"
	},
	"prettier": "@nectar-ui/prettier-config",
	"eslintConfig": {
		"extends": "@nectar-ui/eslint-config",
		"parserOptions": {
			"tsConfigRootDir": "./"
		}
	}
}
