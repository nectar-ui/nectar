{
  "name": "nectar-ui",
  "version": "0.1.0",
  "description": "The nectar-ui design system.",
  "author": "Brennan Walsh <mail@brennanwal.sh> (https://brennanwal.sh)",
  "repository": "nectar-ui/nectar",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -Xdf",
    "commit": "changeset add",
    "coverage": "vitest run --passWithNoTests",
    "dev": "turbo run dev",
    "format": "prettier --write . --ignore-path .gitignore",
    "init": "pnpm install",
    "lint": "turbo run lint",
    "prod": "turbo run prod",
    "publish": "changeset publish",
    "test": "turbo run test -- --passWithNoTests",
    "version": "changeset version"
  },
  "dependencies": {
    "@nectar-ui/tsconfig": "workspace:*",
    "@nectar-ui/eslint-config": "workspace:*",
    "@nectar-ui/prettier-config": "workspace:*",
    "@nectar-ui/vite-config": "workspace:*",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "eslint": "^8.41.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turbo": "^1.10.2",
    "typescript": "^5.0.4",
    "ts-node": "^10.9.1",
    "vite": "^4.3.9",
    "vitest": "^0.32.1",
    "@vitest/coverage-v8": "^0.32.1"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^18.16.14",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4"
  },
  "prettier": "@nectar-ui/prettier-config"
}
