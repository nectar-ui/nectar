{
	"rootDir": "./../../",
	"cacheDirectory": "<rootDir>/var/jest/cache",
	"coverageDirectory": "<rootDir>/var/jest/coverage",
	"collectCoverageFrom": ["**/src/*.{ts,tsx}", "!**/index.{ts,tsx}", "!**/src/+(*.)+(spec|test).+(ts|js)?(x)"],
	"coverageReporters": ["html"],
	"collectCoverage": true,
	"extensionsToTreatAsEsm": [".ts", ".tsx"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"modulePathIgnorePatterns": ["/dist/"],
	"setupFilesAfterEnv": ["./configs/jest-config/bootstrap.ts"],
	"snapshotResolver": "./configs/jest-config/snapshotResolver.ts",
	"testMatch": ["**/+(*.)+(spec).+(ts)?(x)"],
	"testPathIgnorePatterns": ["/node_modules/", "/dist/"],
	"transform": {
		"^.+\\.tsx?$": [
			"ts-jest",
			{
				"useEsm": true
			}
		]
	}
}
