{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"ts-node": {
		"esm": true
	},
	"exclude": ["node_modules"]
}
